{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Cosmos DB Name": {
      "type": "string",
      "defaultValue": "knowledgecapturedev",
      "metadata": {
        "description": "Please enter the name of Cosmos DB here."
      }
    },
    "Cosmos DB Location": {
      "type": "string",
      "defaultValue": "UK South",
      "allowedValues": [
        "UK South",
        "UK West",
        "Australia East",
        "Australia Southeast",
        "Brazil South",
        "Canada Central",
        "Canada East",
        "Central India",
        "Central US",
        "East US",
        "East US 2",
        "France Central",
        "Japan East",
        "Japan West",
        "Korea Central",
        "Korea South",
        "North Central US",
        "North Europe",
        "South Central US",
        "South India",
        "Southeast Asia",
        "West Europe",
        "West India",
        "West US",
        "West US 2"
      ],
      "metadata": {
        "description": "Select the location of Cosmos DB."
      }
    },
    "Speech Service Name": {
      "type": "string",
      "metadata": {
        "description": "Please enter the name of Speech Service here."
      },
      "defaultValue":"KnowledgeCaptureSST-Dev"
    },
    "Speech Service Location": {
      "type": "string",
      "allowedValues": [
        "West US",
        "West US 2",
        "East US",
        "East US 2",
        "East Asia",
        "Southeast Asia",
        "North Europe",
        "West Europe"
      ],
      "metadata": {
        "description": "Select the location of Speech Service."
      }
    },
    "Speech Service SKU": {
      "type": "string",
      "defaultValue": "S0",
      "allowedValues": [
        "F0",
        "S0"
      ],
      "metadata": {
        "description": "Select the pricing tier of Speech Service."
      }
    },
    "App Service Plan Name": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Please enter the name of app service plan that will host the application."
      },
      "defaultValue": "ACU-RG-DEV"
    },
    "App Service Plan SKU": {
      "type": "string",
      "defaultValue": "B2",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Select the pricing tier of the App Service plan."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2015-04-08",
      "kind": "GlobalDocumentDB",
      "type": "Microsoft.DocumentDb/databaseAccounts",
      "name": "[parameters('Cosmos DB Name')]",
      "location": "[parameters('Cosmos DB Location')]",
      "properties": {
        "databaseAccountOfferType": "Standard",

        "enableMultipleWriteLocations": false,
        "isVirtualNetworkFilterEnabled": false,
        "virtualNetworkRules": [],
        "dependsOn": []
      }
    },
    {
      "apiVersion": "2017-04-18",
      "name": "[parameters('Speech Service Name')]",
      "location": "[parameters('Speech Service Location')]",
      "type": "Microsoft.CognitiveServices/accounts",
      "kind": "SpeechServices",
      "sku": {
        "name": "[parameters('Speech Service SKU')]"
      },
      "properties": {}
    },
    {
      "name": "[parameters('App Service Plan Name')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('App Service Plan SKU')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "App Service Plan"
      },
      "properties": {
        "name": "[parameters('App Service Plan Name')]",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2018-02-01",
      "name": "pid-a9d60af4-e8f2-4928-b6d4-64445afc7bd3",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    }
  ],
  "outputs": {}
}



